<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_bg_hockey_reference_guide">

    <androidx.cardview.widget.CardView
        android:id="@+id/news_photo"
        android:layout_width="107dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/background"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="107dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/nav_bottom"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/iv_reference_guide"
                android:layout_width="107dp"
                android:layout_height="65dp"
                android:preserveLegacyExternalStorage="true"
                android:requestLegacyExternalStorage="true"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Champions League 2022-23 draw:group stage analysis and predictions"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text1"
        android:textSize="12sp"
        android:maxLines="3"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/news_photo"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
