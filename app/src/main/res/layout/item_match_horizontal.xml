<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="210dp"
        android:layout_height="140dp"
        android:background="@drawable/item_match_horizontal_act"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 : 20"
            android:textSize="9sp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 - 2"
            android:textColor="@color/text1"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="21sp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/flag_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:requestLegacyExternalStorage="true"
            android:preserveLegacyExternalStorage="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv_result"
            app:layout_constraintEnd_toStartOf="@+id/tv_result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_result"
            app:srcCompat="@drawable/def_flag" />

        <ImageView
            android:id="@+id/flag_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:requestLegacyExternalStorage="true"
            android:preserveLegacyExternalStorage="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_result"
            app:layout_constraintTop_toTopOf="@+id/tv_result"
            app:srcCompat="@drawable/def_flag" />

        <TextView
            android:id="@+id/tv_country_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Германия"
            android:textColor="@color/text1"
            android:textSize="9sp"
            android:layout_marginTop="94dp"
            app:layout_constraintEnd_toEndOf="@+id/flag_left"
            app:layout_constraintStart_toStartOf="@+id/flag_left"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_team_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depay 79’"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text1"
            android:textSize="9sp"
            android:layout_marginTop="109dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_country_left"
            app:layout_constraintStart_toStartOf="@+id/tv_country_left"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_country_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Германия"
            android:textColor="@color/text1"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="@+id/flag_right"
            app:layout_constraintStart_toStartOf="@+id/flag_right"
            app:layout_constraintTop_toTopOf="@+id/tv_country_left" />

        <TextView
            android:id="@+id/tv_team_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Depay 79’"
            android:textColor="@color/text1"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_country_right"
            app:layout_constraintStart_toStartOf="@+id/tv_country_right"
            app:layout_constraintTop_toBottomOf="@+id/tv_country_left" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
