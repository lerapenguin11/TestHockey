<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/item_past_matches">

    <TextView
        android:id="@+id/tv_name_team_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chelsea"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text1"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_team_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chelsea"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_flag_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_team_left"
        app:layout_constraintStart_toEndOf="@+id/tv_name_team_left"
        app:layout_constraintTop_toTopOf="@+id/tv_name_team_left"
        app:srcCompat="@drawable/def_flag" />

    <ImageView
        android:id="@+id/iv_flag_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_team_right"
        app:layout_constraintEnd_toStartOf="@+id/tv_name_team_right"
        app:layout_constraintTop_toTopOf="@+id/tv_name_team_right"
        app:srcCompat="@drawable/def_flag" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27 Aug 2022"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text1"
        android:textSize="10sp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_flag_left"
        app:layout_constraintStart_toEndOf="@+id/iv_flag_right"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 : 00"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text1"
        android:textSize="10sp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_data"
        app:layout_constraintStart_toStartOf="@+id/tv_data"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_container"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/item_past_matches"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_view"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text1"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>