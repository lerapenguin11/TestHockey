<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestHockey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Heading1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Heading2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Heading3" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Heading4" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#797979</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Heading5" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>